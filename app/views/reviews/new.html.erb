<section>
  <%= form_with model: [@product, @review] do |f| %>
    <h3> Add a review for <%=@product.name%></h3>
    <p><%= f.label :name %>
    <%= f.text_field :name %></p>

    <p><%= f.label :rating %>
    <%= f.select :rating, Review::RATINGS %></p>

    <p><%= f.label :description %>
    <%= f.text_area :description %></p>

    <%= f.hidden_field :product_id, value: @product.id %>

    <%= f.submit class: "btn btn-primary" %>

  <% end %>
</section>
